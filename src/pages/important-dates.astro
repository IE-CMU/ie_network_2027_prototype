---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Important Dates">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-4xl font-bold mb-12 text-center">Important Dates</h1>

    <div class="max-w-3xl mx-auto">
      <div class="relative">
        <!-- Timeline -->
        <div class="space-y-8">
          <!-- Date 1 -->
          <div class="flex">
            <div class="flex flex-col items-center">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-full bg-blue-600 text-white font-bold"
              >
                1
              </div>
              <div class="w-1 h-24 bg-gray-300 mt-2"></div>
            </div>
            <div class="ml-6 pb-4">
              <h3 class="text-xl font-bold text-blue-600">
                Opening for Full Paper Submission
              </h3>
              <p class="text-gray-600 mt-1">January 1 - February 15, 2026</p>
              <p class="text-gray-700 mt-2">
                Submit your completed papers (full manuscripts) through the
                online submission portal.
              </p>
            </div>
          </div>

          <!-- Date 2 -->
          <div class="flex">
            <div class="flex flex-col items-center">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-full bg-green-600 text-white font-bold"
              >
                2
              </div>
              <div class="w-1 h-24 bg-gray-300 mt-2"></div>
            </div>
            <div class="ml-6 pb-4">
              <h3 class="text-xl font-bold text-green-600">
                Paper Acceptance Notification
              </h3>
              <p class="text-gray-600 mt-1">March 15, 2026</p>
              <p class="text-gray-700 mt-2">
                Authors will be notified of the peer review results and
                acceptance decisions.
              </p>
            </div>
          </div>

          <!-- Date 3 -->
          <div class="flex">
            <div class="flex flex-col items-center">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-full bg-purple-600 text-white font-bold"
              >
                3
              </div>
              <div class="w-1 h-24 bg-gray-300 mt-2"></div>
            </div>
            <div class="ml-6 pb-4">
              <h3 class="text-xl font-bold text-purple-600">
                Revised Paper Submission Deadline
              </h3>
              <p class="text-gray-600 mt-1">April 15, 2026</p>
              <p class="text-gray-700 mt-2">
                Submit revised papers incorporating reviewer comments and
                suggestions.
              </p>
            </div>
          </div>

          <!-- Date 4 -->
          <div class="flex">
            <div class="flex flex-col items-center">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-full bg-orange-600 text-white font-bold"
              >
                4
              </div>
              <div class="w-1 h-24 bg-gray-300 mt-2"></div>
            </div>
            <div class="ml-6 pb-4">
              <h3 class="text-xl font-bold text-orange-600">
                Conference Registration
              </h3>
              <p class="text-gray-600 mt-1">April 1-30, 2026</p>
              <p class="text-gray-700 mt-2">
                Register for the conference. Early bird rates may be available.
              </p>
            </div>
          </div>

          <!-- Date 5 -->
          <div class="flex">
            <div class="flex flex-col items-center">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-full bg-red-600 text-white font-bold"
              >
                5
              </div>
            </div>
            <div class="ml-6 pb-4">
              <h3 class="text-xl font-bold text-red-600">Conference Dates</h3>
              <p class="text-gray-600 mt-1">May 13-15, 2026</p>
              <p class="text-gray-700 mt-2">
                Paper presentations and conference activities at MIDA GRANDE
                HOTEL DHAVARAVADHI NA KHON PATHOM.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Links Section -->
    <section class="mt-16 bg-blue-50 p-8 rounded-lg">
      <h2 class="text-2xl font-bold mb-6">Ready to Submit?</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-bold mb-3">Paper Templates</h3>
          <ul class="space-y-2">
            <li>
              <a
                href="https://ie-netwotk-2026.netlify.app/PDF/Full_paper_Template_IE-Net-2026-Thai.docx"
                class="text-blue-600 hover:underline"
              >
                Template (Thai Version)
              </a>
            </li>
            <li>
              <a
                href="https://ie-netwotk-2026.netlify.app/PDF/FullPaperTemplate-IENetwork2026-En.docx"
                class="text-blue-600 hover:underline"
              >
                Template (English Version)
              </a>
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-bold mb-3">Submission Portal</h3>
          <p class="text-gray-700 mb-3">
            Submit your paper through the CMT online submission system.
          </p>
          <a
            href="https://cmt3.research.microsoft.com/IENETWORK2026/Submission/Index"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition"
          >
            Submit Paper
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
