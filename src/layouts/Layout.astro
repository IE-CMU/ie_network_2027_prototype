---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - IE Network 2027` : "IE Network 2027"}</title>
  </head>
  <body class="bg-white text-gray-900">
    <!-- Navigation -->
    <nav class="sticky top-0 z-50 bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <h1 class="text-2xl font-bold text-[#9E76B4]">IE Network 2027</h1>
          </div>
          <ul class="hidden md:flex space-x-8">
            <li>
              <a href="/" class="hover:text-[#9E76B4] transition">Home</a>
            </li>
            <li>
              <a href="/about" class="hover:text-[#9E76B4] transition">About</a>
            </li>
            <li>
              <a
                href="/conference-topics"
                class="hover:text-[#9E76B4] transition">Topics</a
              >
            </li>
            <li>
              <a href="/important-dates" class="hover:text-[#9E76B4] transition"
                >Dates</a
              >
            </li>
            <li>
              <a href="/submission" class="hover:text-[#9E76B4] transition"
                >Submission</a
              >
            </li>
            <li>
              <a href="/contact" class="hover:text-[#9E76B4] transition"
                >Contact</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <slot />

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div>
            <h3 class="text-lg font-bold mb-4">IE Network 2027</h3>
            <p class="text-gray-300">
              Engineering Tomorrow: Innovation and Sustainability
            </p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4">Contact</h3>
            <p class="text-gray-300">Tel: XXX-XXXXXXX</p>
            <p class="text-gray-300">Email: ienetwork2027@gmail.com</p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4">Follow Us</h3>
            <a href="#" class="text-purple-400 hover:text-purple-300"
              >Facebook</a
            >
          </div>
        </div>
        <div class="border-t border-gray-700 pt-8 text-center text-gray-400">
          <p>&copy; 2027 IE Network. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
